Algoritmo Ejercicio2
	Definir IVA, imp, dev1,dev2,dev3,devol,devolu, impo, impor Como Real;
	IVA=0.21;
	
	Escribir "Cuanto es el importe de compra ";
	Leer imp;
	
	impo= (imp*IVA);
	Escribir "Estas pagando el siguiente IVA " impo;
	impor=impo+imp;
    Escribir "El precio total del producto es " impor;
	
	Escribir "Con cuanto vas a pagar ";
	Leer dev1;
	devolu=dev1;
	Si dev1>impor Entonces
		
		devol= dev1-impor;
		Escribir "Te devolvere " devol;
	SiNo
		Mientras impor>dev1 Hacer
			Escribir "Que me pagues o te mato chaval ";
			Leer dev2;
			devolu= dev1+dev2;
			devol= devolu-impor;
			Escribir "Te devolvere " devol;
		Fin Mientras
	Fin Si
	
FinAlgoritmo
